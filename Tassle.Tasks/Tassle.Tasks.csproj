<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Configuration" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>library</OutputType>
    <DocumentationFile>$(OutDir)Tassle.Tasks.xml</DocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Tassle</Product>
    <Title>Tassle.Tasks</Title>
    <Description>Tasks component of Tassle</Description>
    <Version>1.0.0</Version>
    <Authors>Eser Ozvataf</Authors>
    <PackageProjectUrl>https://github.com/eserozvataf/tassle</PackageProjectUrl>
    <RepositoryUrl>https://github.com/eserozvataf/tassle</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/eserozvataf/tassle/blob/development/LICENSE</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Tassle.Services/Tassle.Services.csproj" />
    <ProjectReference Include="../Tassle.Helpers/Tassle.Helpers.csproj" />
  </ItemGroup>

</Project>

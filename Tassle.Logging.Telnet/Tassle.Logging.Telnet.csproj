<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Configuration" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>library</OutputType>
    <DocumentationFile>$(OutDir)Tassle.Logging.Telnet.xml</DocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Tassle</Product>
    <Title>Tassle.Logging.Telnet</Title>
    <Description>Telnet Logger component of Tassle</Description>
    <Version>1.0.0</Version>
    <Authors>Eser Ozvataf</Authors>
    <PackageProjectUrl>https://github.com/eserozvataf/tassle</PackageProjectUrl>
    <RepositoryUrl>https://github.com/eserozvataf/tassle</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/eserozvataf/tassle/blob/development/LICENSE</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.Primitives" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Tassle.Telnet\Tassle.Telnet.csproj" />
  </ItemGroup>

</Project>
